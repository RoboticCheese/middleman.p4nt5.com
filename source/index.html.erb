---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
<% end %>

<% if paginate %>
  <ul class="pager">
    <li <%= 'class="disabled"' unless prev_page %>><%= link_to 'Previous Page', prev_page %></li>
    <li <%= 'class="disabled"' unless next_page %>><%= link_to 'Next Page', next_page %></li>
  </ul>
<% end %>
